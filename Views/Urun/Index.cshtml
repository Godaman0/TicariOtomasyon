@using MVCOnlineTicariOtomasyon.Models.Siniflar;
@model List<Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
    <p>
        Ürün Adı:@Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>

        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Yap</th>
    </tr>
    @foreach (var u in Model)
    {
<tr>
    <td>@u.UrunlerId</td>
    <td>@u.UrunlerAd</td>
    <td>@u.Marka</td>
    <td>@u.Stok</td>
    <td>@u.AlisFiyat ₺</td>
    <td>@u.SatisFiyat ₺</td>
    <td>@u.Kategori.KategoriAd</td>

    <td>
        <a href="/Urun/UrunSil/@u.UrunlerId" class="btn btn-danger">Sil</a>
    </td>
    <td>
        <a href="/Urun/UrunGetir/@u.UrunlerId" class="btn btn-success">Güncelle</a>
    </td>
    <td>
        <a href="/Urun/SatisYap/@u.UrunlerId" class="btn btn-default" style="background-color:bisque">Satış Yap</a>
    </td>

</tr>
    }
</table>
<a href="/Urun/YeniUrun/" class="btn btn-info">Yeni Ürün</a>
