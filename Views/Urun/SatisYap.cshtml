@model  MVCOnlineTicariOtomasyon.Models.Siniflar.SatisHareket

@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>SatisYap</h2>

<form class="form-group" method="post">
    @Html.LabelFor(x => x.Urunlerid)
    @*@Html.TextBoxFor(x => x.Urunlerid, new { @class = "form-control" })*@
    <input type="text" name="Urunlerid" value="@ViewBag.dgr2" class="form-control" readonly />

    <br />
    @Html.LabelFor(x => x.Personelid)
    @Html.DropDownListFor(x => x.Personelid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })

    <br />
    @Html.LabelFor(x => x.Cariid)
    @Html.TextBoxFor(x => x.Cariid, new { @class = "form-control"  })

    <br />
    @Html.LabelFor(x => x.Adet)
    <input type="number"  name="Adet" class="form-control" id="txt1"
            placeholder="Adet Girin" onchange="sum();"  />

    <br />
    @Html.LabelFor(x => x.Fiyat)
    <input type="text" name="Fiyat" value="@ViewBag.dgr3" class="form-control" id="txt2"
           onkeyup="sum();" />

    <br />
    @Html.LabelFor(x => x.ToplamTutar)
    <input type="number"   name="ToplamTutar" id="txt3" class="form-control" value="0"  readonly/>


    <br />
    @*@Html.LabelFor(x => x.Tarih)
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })*@



    <br />
    <button class="btn btn-primary" id="butn">Satış Yap</button>
</form>

<br />
<br />
<br />


@*<input type="text" id="txt1" onkeyup="sum();" />*@
@*<input type="text" id="txt2" onkeyup="sum();" />*@
@*<input type="text" id="txt3" />*@
<script>
    function sum() {
        var sayi1 = document.getElementById('txt1').value;
        var sayi2 = document.getElementById('txt2').value;
        var sonuc = parseInt(sayi1) * parseInt(sayi2);
        if (!isNaN(sonuc)) {
            document.getElementById('txt3').value = sonuc;
        }
        var button = document.getElementById('butn');
        if (sonuc == 5000) {
            button.disabled = false;
        }
        else {
            button.disabled = true;
        }
    }
</script>














